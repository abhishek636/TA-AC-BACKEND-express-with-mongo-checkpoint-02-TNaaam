<html>
  <head>
    <title>Event Management</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <div class="container">
        <div class="flex jc-between">
          <a class="jc-center flex" href="/">
            <img class="logo" src="/images/logo.png" alt="Logo" />
            <h2>INFINITY</h2>
          </a>
          <nav>
            <ul class="flex jc-around">
              <li>
                <a href="/about"> About Us </a>
              </li>
              <li>
                <a href="/gallery"> Gallery </a>
              </li>
              <li>
                <a href="/events"> Events </a>
              </li>
            </ul>
          </nav>
        </div>
        <h1>Welcome to Infinity Event Management</h1>
      </div>
    </header>
    <section class="container space">
      <div>
        <h2 class="txt-center"><%= event.title %></h2>
        <h3 class="txt-center">Summary: <%= event.summary %></h3>
        <p>Host: <%= event.host %></p>
        <p>Start: <%= event.start_date %></p>
        <p>End: <%= event.end_date %></p>
        <p>Event Category: <%= event.event_category[0] %></p>
        <p>Location: <%= event.location %></p>
        <div class="flex">
          <p>Likes: <%= event.likes %></p>
          <a href="/events/<%= event.id %>/inc">
            <button class="like">Likes</button>
          </a>
        </div>
      </div>
      <div class="txt-center">
        <a href="/events/<%= event.id %>/edit">
          <button class="update">Update</button>
        </a>
        <a href="/events/<%= event.id %>/delete">
          <button class="delete">Delete</button>
        </a>
      </div>
      <div class="flex jc-between ai-start">
        <div class="flex-30">
          <form action="/events/<%= event.id %>/remarks" method="post">
            <textarea name="remark" rows="3" placeholder="Add Remark"></textarea>
            <input type="text" name="author" placeholder="Author" />
            <input type="number" name="likes" placeholder="Likes" />
            <input type="submit" value="Add Remark" />
          </form>
        </div>
        <div class="flex-60">
          <h2>Remarks</h2>
          <hr />
          <% event.remarks.forEach(c => { %>
          <div class="flex jc-between">
            <p>Remark: <%= c.remark %></p>
            <div class="flex">
              <p>Likes: <%= c.likes %></p>
              <a href="/remarks/<%= c.id %>/inc">
                <button class="like">Likes</button>
              </a>
            </div>
          </div>
          <div>
            <a href="/remarks/<%= c.id %>/edit">
              <button class="update">Edit</button>
            </a>
            <a href="/remarks/<%= c.id %>/delete">
              <button class="delete">Delete</button>
            </a>
          </div>
          <hr />
          <% }) %>
        </div>
      </div>
    </section>
    <footer>
      <div>
          <small>&copy; All CopyRights Reserved 2022</small>
      </div>
  </footer>
  </body>
</html>

